<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMAMUAIAPP.MainPage"
             Title="Inicio"
             BackgroundColor="#f4f4f4">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Frame Padding="15" BackgroundColor="White" CornerRadius="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Image
                        Source="engranaje.png"
                        HeightRequest="150"
                        Aspect="AspectFit"
                        HorizontalOptions="Center" />

                    <Label
                        Text="E.M.A"
                        FontSize="32"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="#333" />

                    <Label
                        Text="Bienvenido, selecciona una opción disponible:"
                        FontSize="18"
                        HorizontalOptions="Center"
                        TextColor="#555" />
                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Spacing="15">
                <Button
                    Text="Gestión de Clientes"
                    Clicked="OnClientesClicked"
                    BackgroundColor="#4a90e2"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="50" />

                <Button
                    Text="Gestión de Equipos"
                    Clicked="OnEquiposClicked"
                    BackgroundColor="#50e3c2"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="50" />

                <Button
                    Text="Gestión de Pagos"
                    Clicked="OnPagosClicked"
                    BackgroundColor="#f5a623"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="50" />

                <Button
                    Text="Gestión de Ordenes de Trabajo"
                    Clicked="OnOrdenesClicked"
                    BackgroundColor="#d0021b"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="50" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
