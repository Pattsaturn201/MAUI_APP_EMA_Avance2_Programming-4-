<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMAMUAIAPP.ClientesPage"
             Title="Clientes">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Clientes Registrados"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Agregar Cliente"
                Clicked="OnAgregarClienteClicked" />

        <CollectionView x:Name="ClientesCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding NombreCompleto}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding ApellidoCompleto}" FontAttributes="Italic" />
                            <Label Text="{Binding Correo}" />
                            <Label Text="{Binding Telefono}" />
                            <Label Text="{Binding Direccion}" />
                            <Label Text="Metodos de Pago:" FontAttributes="Bold" />
                            <Label Text="{Binding MetodosDePagoString}" LineBreakMode="WordWrap" />

                            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                                <Button Text="Editar"
                                        Clicked="OnEditarClienteClicked"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"/>
                                <Button Text="Eliminar"
                                        Clicked="OnEliminarClienteClicked"
                                        BackgroundColor="#F44336"
                                        TextColor="White"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
