<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMAMUAIAPP.EquiposPage"
             Title="Equipos">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Lista de Equipos"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Registrar Equipo"
                Clicked="OnAgregarEquipoClicked" />

        <CollectionView x:Name="EquiposCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Codigo}" FontAttributes="Bold" />
                            <Label Text="{Binding Estado}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
