<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMAMUAIAPP.OrdenesPage"
             Title="Órdenes de Trabajo">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Órdenes de Trabajo"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Agregar Nueva Orden"
                Clicked="OnAgregarOrdenClicked" />

        <CollectionView x:Name="OrdenesCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Titulo}" FontAttributes="Bold" />
                            <Label Text="{Binding Descripcion}" FontSize="12" />
                            <Label Text="{Binding Fecha}" FontSize="10" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
