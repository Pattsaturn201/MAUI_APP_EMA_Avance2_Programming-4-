<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMAMUAIAPP.PagosPage"
             Title="Pagos">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Historial de Pagos"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Registrar Pago"
                Clicked="OnAgregarPagoClicked" />

        <CollectionView x:Name="PagosCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Cliente}" FontAttributes="Bold" />
                            <Label Text="{Binding Monto}" />
                            <Label Text="{Binding Fecha}" FontSize="10" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
