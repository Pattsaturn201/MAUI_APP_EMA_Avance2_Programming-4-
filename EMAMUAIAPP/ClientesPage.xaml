<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMAMUAIAPP.ClientesPage"
             Title="Clientes">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Clientes Registrados"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Agregar Cliente"
                Clicked="OnAgregarClienteClicked" />

        <CollectionView x:Name="ClientesCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                            <Label Text="{Binding Telefono}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
